<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="@dimen/padding_micro"
    >
    <TextView
        android:id="@+id/tvTranslatable"
        android:layout_weight="1"
        android:text="@string/add_words"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTranslated"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/half_default_padding"
        android:text="@string/add_words"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.roman.vocabulary.utilities.Circle
        android:id="@+id/circle"
        android:layout_width="45dp"
        android:layout_height="45dp" />



</LinearLayout>